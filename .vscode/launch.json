{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "RunServer",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/main.go",
            "showLog": true,
            "env": {},
            "args": ["serve"]
        },
        {
            "name": "RunCron",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/main.go",
            "showLog": true,
            "env": {},
            "args": ["cron"]
        },
        {
            "name": "RunConsumer",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/main.go",
            "showLog": true,
            "env": {},
            "args": ["consumer"]
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "${fileDirname}",
            "showLog": true
        },
        {
            "name": "Launch Test File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "cwd": "${workspaceFolder}",
            "program": "${file}",
            "args": ["-v"]
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0
        }
    ]
}